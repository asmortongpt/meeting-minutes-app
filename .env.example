# ============================================================================
# Meeting Minutes Pro - Environment Configuration Template
# Copy this file to .env and fill in your values
# ============================================================================

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME="Meeting Minutes Pro"
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# Database (PostgreSQL)
# ============================================================================
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=meeting_user
POSTGRES_PASSWORD=change_this_password  # CHANGE IN PRODUCTION
POSTGRES_DB=meeting_minutes

# Database Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ============================================================================
# Redis (Cache & Sessions)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_this_password  # CHANGE IN PRODUCTION
REDIS_DB=0
REDIS_SSL=false

# Cache TTL (seconds)
CACHE_TTL_DEFAULT=3600
CACHE_TTL_MEETING=3600
CACHE_TTL_USER=7200
CACHE_TTL_ANALYTICS=1800

# ============================================================================
# Celery (Background Jobs)
# ============================================================================
# RabbitMQ
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=change_this_password  # CHANGE IN PRODUCTION

# Celery URLs
CELERY_BROKER_URL=amqp://admin:change_this_password@localhost:5672//
CELERY_RESULT_BACKEND=redis://:change_this_password@localhost:6379/1

# ============================================================================
# Security & Authentication
# ============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=change_this_to_a_random_64_character_hex_string  # REQUIRED

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth2 (Optional)
OAUTH_MICROSOFT_CLIENT_ID=
OAUTH_MICROSOFT_CLIENT_SECRET=
OAUTH_MICROSOFT_TENANT_ID=

OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=

# ============================================================================
# AI API Keys (REQUIRED)
# ============================================================================
# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here  # REQUIRED

# OpenAI (GPT-4, Whisper)
OPENAI_API_KEY=sk-your-key-here  # REQUIRED

# Google Gemini
GEMINI_API_KEY=your-key-here  # REQUIRED

# Grok (Optional)
GROK_API_KEY=

# AI Model Settings
CLAUDE_MODEL_PRIMARY=claude-3-5-sonnet-20241022
GPT_MODEL_PRIMARY=gpt-4-turbo-preview
GEMINI_MODEL_PRIMARY=gemini-1.5-pro

AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7
AI_TIMEOUT=60
AI_MAX_RETRIES=3

# ============================================================================
# Email Configuration
# ============================================================================
EMAIL_HOST=smtp.office365.com
EMAIL_PORT=587
EMAIL_USER=your-email@company.com
EMAIL_PASS=your-email-password
EMAIL_USE_TLS=true
EMAIL_FROM_NAME="Meeting Minutes Pro"

# ============================================================================
# Microsoft Graph API (Optional - for Calendar integration)
# ============================================================================
MICROSOFT_GRAPH_CLIENT_ID=
MICROSOFT_GRAPH_CLIENT_SECRET=
MICROSOFT_GRAPH_TENANT_ID=

# ============================================================================
# Google Calendar API (Optional)
# ============================================================================
GOOGLE_CALENDAR_CREDENTIALS=

# ============================================================================
# Communication Platforms (Optional)
# ============================================================================
# Slack
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# Microsoft Teams
TEAMS_WEBHOOK_URL=

# ============================================================================
# Project Management Integration (Optional)
# ============================================================================
# Jira
JIRA_SERVER=https://your-domain.atlassian.net
JIRA_EMAIL=
JIRA_API_TOKEN=

# Asana
ASANA_ACCESS_TOKEN=

# ============================================================================
# Media Storage
# ============================================================================
MEDIA_UPLOAD_DIR=./uploads
MEDIA_MAX_SIZE_MB=100

# Azure Blob Storage (Optional - for production)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=meeting-minutes

# ============================================================================
# Monitoring & Logging
# ============================================================================
# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Prometheus
METRICS_ENABLED=true
METRICS_PORT=9090

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# Feature Flags
# ============================================================================
FEATURE_AI_TRANSCRIPTION=true
FEATURE_AI_SENTIMENT=true
FEATURE_CALENDAR_SYNC=false  # Enable when ready
FEATURE_SLACK_INTEGRATION=false  # Enable when ready
FEATURE_JIRA_INTEGRATION=false  # Enable when ready
FEATURE_REAL_TIME_COLLABORATION=true
FEATURE_ANALYTICS_DASHBOARD=true

# ============================================================================
# Search
# ============================================================================
SEARCH_ENABLED=true
SEARCH_INDEX_PATH=./search_index
VECTOR_SEARCH_ENABLED=true
EMBEDDING_MODEL=text-embedding-3-small
VECTOR_DIMENSION=1536

# ============================================================================
# Analytics
# ============================================================================
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# ============================================================================
# Compliance & Data Retention
# ============================================================================
DATA_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=730
GDPR_ENABLED=true

# ============================================================================
# Server Configuration
# ============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true  # Set to false in production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-domain.com

# ============================================================================
# Azure Configuration (for Production)
# ============================================================================
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=meeting-minutes

# ============================================================================
# Development & Testing
# ============================================================================
TESTING=false
TEST_DATABASE_URL=

# ============================================================================
# Docker Compose Overrides
# ============================================================================
# These are used by docker-compose.yml
COMPOSE_PROJECT_NAME=meeting-minutes

# ============================================================================
# Notes
# ============================================================================
# 1. NEVER commit this file with real credentials
# 2. Use strong, unique passwords in production
# 3. Generate SECRET_KEY with: openssl rand -hex 32
# 4. Keep API keys secure and rotate regularly
# 5. Enable SSL/TLS in production (REDIS_SSL=true)
# 6. Review security settings before going live
# ============================================================================
